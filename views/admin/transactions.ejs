
<%- include('../partials/admin/nav.ejs') %>

<section class="container codesection">
    <h2>All Transaction Histories</h2>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
        <% }) %>    
    <% } %>

    <% if(!alert.length) { %>
        <p>No transaction have occurred on the account</p>
    <% } else { %>
                 <div class="col">
                        <section class="row receiptRow">
                                    <% alert.forEach((item) => { %>
                                    <section class="">
                                        <section class="clearfix">
                                            <h2>Transaction history</h2>
                                            <hr>
                                            <h2>Transaction Details - </h2>
                                            <p> Date : <%= item.date %></p>
                                            <p> Time : <%= item.time %></p>
                                            <p> Reference Number : <%= item.referenceNo %></p>
                                            <p> Amount : <%= item.transferAmount %></p>

                                            <h2>Acccounts Details:-</h2>

                                            <p>Sender Name : <%= item.from.toUpperCase() %></p>
                                            <p>Sender Account Number : <%= item.fromNo %></p>
                                            <p>Reciever Name : <%= item.toName.toUpperCase() %></p>
                                            <p>Reciever Account Number : <%= item.toNumber %></p>
                                        </section>
                                        <a style="margin: 10px; width: 40%" class="btn btn-outline-danger" href="/admin/generalupdate/<%= item._id %>">Update</a>
                                        <a style="margin: 10px; width: 40%" class="btn btn-outline-danger" href="/admin/generalreverse/<%= item._id %>">Reverse</a>
                                    </section>
                                    <% }) %>
                                </section>

                            </div>
    <% } %>
   
</section>



<%- include('../partials/admin/modal.ejs') %>

