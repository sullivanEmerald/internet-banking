<%- include('../partials/admin/nav.ejs') %>

<% function useComma(price) { %>
    <% return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') %>
<% } %>

<section class="accountInfo">
    <section class="accDetails">
        <h2>Account Details</h2>
        <img src="<%= user.ownerImage  %>" class="accImg" alt="">
        <section>
            <section>
                <p>Your Account Number : </p>
                <p>Account Balance  : </p> 
            </section>
            <section>
                <p><%= user.accountNumber %></p>
                <p>&dollar; <%= useComma(user.balance) %></p> 
            </section>
        </section>
        <section class="userButton">

            <button type="button" class="btn btn-outline-info btn-lg" data-bs-toggle="modal" data-bs-target="#editmodal">
                Edit
              </button>
            
            <form action="/admin/delete/user/<%= user._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-info btn-lg">Delete</button>
            </form>

            <button type="button" class="btn btn-outline-info btn-lg" data-bs-toggle="modal" data-bs-target="#editbalance">
                Deposit
              </button>
        
        </section>
         
    </section>

    <section class="middle"> 
        <h2 class="">User Information</h2>
        <section>
            <section class="">
                <p>First Name : </p>  
                <p>Middle Name : </p>   
                <p>Last Name : </p>   
                <p>Email : </p>  
                <p>Mobile : </p>   
                <p>Gender : </p>   
                <p>Occupation : <p>   
                <p>Address : </p>  
                <p>Nationality : </p>
                <p>landmark : </p> 
           </section>  

            <section>
                <p> <%= user.username %></p>
                <p> <%= user.middlename %></p>
                <p><%= user.lastname %></p>
                <p><%= user.email %></p>
                <p><%= user.mobile %></p>
                <p><%= user.gender %></p>
                <p><%= user.occupation %></p>
                <p><%= user.address %></p>
                <p><%= user.nation %></p>
                <p><%= user.landmark %></p>
            </section>
        </section>
    </section>
   <section class="last">
        <h2>Next of Kin</h2>
        <section>
            <section class="">
                <p>Next Of Kin : </p>
                <p>Relationship : </p>
                <p>Mobile : </p>
                <p>Address : </p>
            </section>
            <section>
                <p><%= user.kin %></p>
                <p><%= user.relationship %></p>
                <p><%= user.kinMobile %></p>
                <p><%= user.Kinaddress %></p>
            </section>
        </section>
            
            
    </section>
</section>

