<%- include('./partials/nav.ejs') %>

<section class="container account">
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <p class="text-danger">Enter Your Account Number Linked To Your Email </p>
    <form action="/find/user" method="POST">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="floatingInput" placeholder="Acount Number" name="account">
            <label for="floatingInput">Acount Number</label>
          </div>
          <button type="submit" class="btn btn-outline-info btn-lg">View Account Profile</button>
          <a href="/logout" class="btn btn-outline-info btn-lg">Log Out</a>
      </form>
</section>

